{
    "compilerOptions": {
        "target": "es6",
        "lib": ["esnext", "dom", "dom.iterable"],
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "noEmitOnError": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "types": [],
        "jsx": "react",
        "noEmit": false,
        "strict": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
